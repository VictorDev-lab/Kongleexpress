{
  "name": "kongle-express",
  "version": "1.0.0",
  "description": "Norwegian Pinecone E-commerce Platform",
  "private": true,
  "type": "module",
  "main": "backend/server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "npm run dev --prefix backend",
    "backend:start": "npm run start --prefix backend",
    "frontend:dev": "npm start --prefix frontend",
    "build": "npm run frontend:build && echo 'Build complete - full-stack Kongle Express ready!'",
    "frontend:build": "echo 'Copying frontend files...' && cp -r frontend/* backend/ 2>/dev/null || true",
    "postinstall": "npm install --prefix backend && npm install --prefix frontend && npm run frontend:build",
    "install:all": "npm install && npm install --prefix backend && npm install --prefix frontend",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.0",
    "sequelize": "^6.36.1",
    "stripe": "^18.3.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^3.0.3"
  },
  "keywords": [
    "pinecones",
    "norway",
    "e-commerce",
    "express",
    "mysql",
    "stripe"
  ],
  "author": "VictorDev",
  "license": "MIT"
}
